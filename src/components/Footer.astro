const year = new Date().getFullYear()
---

<footer>
    <span>{year} Antonio Zapata. All rights reserved.</span>
    <ul>
        <li><a href="https://www.linkedin.com/in/antoniozapatal88" target="_blank">Linkedin</a></li>
        <li><a href="https://github.com/tonyzl" target="_blank">Github</a></li>

    </ul>
</footer>

<style>
    footer {
        display: flex;
        justify-content: space-around;
        flex-wrap: wrap;
        align-items: center;
        width: calc(100% - 40px);
        border-top: 1px solid rgb(30, 30, 30, 0.3);
        text-align: center;
        padding: 20px;
        background-color: whitesmoke;
    }

    footer > ul {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
        list-style: none;
        gap: 30px;
        padding: 0;
    }

    footer > ul > li > a {
        color: #1e1e1e;
        transition: all .3s;
    }

    footer > ul > li > a:hover {
        color: orange;
    }

    @media screen and (max-width: 700px) {
        footer {
            justify-content: center;
        }
    }
</style>